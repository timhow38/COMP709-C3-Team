<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:fitsSystemWindows="true"
    tools:context=".About"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_back_black">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:fontFamily="@font/poppins_bold"
            android:gravity="center"
            android:text="About Us"
            android:textColor="@color/white"
            android:textSize="50dp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/blurb"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/TeamList"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="50dp"
        android:fontFamily="@font/poppins_medium"
        android:gravity="center_horizontal"
        android:text="Some Text goes here. Some Text goes here. Some Text goes here. Some Text goes here. Some Text goes here. Some Text goes here. Some Text goes here. Some Text goes here."
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="15dp" />

    <RelativeLayout
        android:id="@+id/TeamList"
        android:layout_width="wrap_content"
        android:layout_height="311dp"
        android:layout_below="@id/header"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/rounded_back">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="306dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="vertical"

                >

                <RelativeLayout
                    android:id="@+id/ray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_back_black">

                    <ImageView
                        android:id="@+id/ray_photo"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/ray" />

                    <TextView
                        android:id="@+id/ray_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:layout_toRightOf="@id/ray_photo"
                        android:fontFamily="@font/poppins_bold"
                        android:text="Ray Smith"
                        android:textColor="@color/white"
                        android:textSize="22dp" />

                    <TextView
                        android:id="@+id/ray_roles"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/ray_name"
                        android:layout_marginRight="5dp"
                        android:layout_toRightOf="@id/ray_photo"
                        android:fontFamily="@font/poppins_regular"
                        android:text="Group Leader, UI/UX Designer, Software Developer"
                        android:textColor="@color/white"
                        android:textSize="15dp" />


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/tim"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp">

                    <ImageView
                        android:id="@+id/tim_photo"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/img_tim" />

                    <TextView
                        android:id="@+id/tim_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:layout_toRightOf="@id/tim_photo"
                        android:fontFamily="@font/poppins_bold"
                        android:text="Timothy Howard"
                        android:textColor="@color/white"
                        android:textSize="22dp" />

                    <TextView
                        android:id="@+id/tim_roles"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tim_name"
                        android:layout_marginRight="5dp"
                        android:layout_toRightOf="@id/tim_photo"
                        android:fontFamily="@font/poppins_regular"
                        android:text="UI/UX Designer, Software Developer"
                        android:textColor="@color/white"
                        android:textSize="15dp" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rewa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/rounded_back_black">

                    <ImageView
                        android:id="@+id/rewa_photo"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/ray" />

                    <TextView
                        android:id="@+id/rewa_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:layout_toRightOf="@id/rewa_photo"
                        android:fontFamily="@font/poppins_bold"
                        android:text="Timothy Howard"
                        android:textColor="@color/white"
                        android:textSize="22dp" />

                    <TextView
                        android:id="@+id/rewa_roles"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/rewa_name"
                        android:layout_marginRight="5dp"
                        android:layout_toRightOf="@id/rewa_photo"
                        android:fontFamily="@font/poppins_regular"
                        android:text="UI/UX Designer, Software Developer"
                        android:textColor="@color/white"
                        android:textSize="15dp" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/lee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp">

                    <ImageView
                        android:id="@+id/lee_photo"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/ray" />

                    <TextView
                        android:id="@+id/lee_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:layout_toRightOf="@id/lee_photo"
                        android:fontFamily="@font/poppins_bold"
                        android:text="Timothy Howard"
                        android:textColor="@color/white"
                        android:textSize="22dp" />

                    <TextView
                        android:id="@+id/lee_roles"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/lee_name"
                        android:layout_marginRight="5dp"
                        android:layout_toRightOf="@id/lee_photo"
                        android:fontFamily="@font/poppins_regular"
                        android:text="UI/UX Designer, Software Developer"
                        android:textColor="@color/white"
                        android:textSize="15dp" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/Arielle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/rounded_back_black">

                    <ImageView
                        android:id="@+id/Arielle_photo"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/ray" />

                    <TextView
                        android:id="@+id/Arielle_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:layout_toRightOf="@id/Arielle_photo"
                        android:fontFamily="@font/poppins_bold"
                        android:text="Timothy Howard"
                        android:textColor="@color/white"
                        android:textSize="22dp" />

                    <TextView
                        android:id="@+id/Arielle_roles"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/Arielle_name"
                        android:layout_marginRight="5dp"
                        android:layout_toRightOf="@id/Arielle_photo"
                        android:fontFamily="@font/poppins_regular"
                        android:text="UI/UX Designer, Software Developer"
                        android:textColor="@color/white"
                        android:textSize="15dp" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/jin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp">

                    <ImageView
                        android:id="@+id/jin_photo"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/ray" />

                    <TextView
                        android:id="@+id/jin_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:layout_toRightOf="@id/jin_photo"
                        android:fontFamily="@font/poppins_bold"
                        android:text="Timothy Howard"
                        android:textColor="@color/white"
                        android:textSize="22dp" />

                    <TextView
                        android:id="@+id/jin_roles"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/jin_name"
                        android:layout_marginRight="5dp"
                        android:layout_toRightOf="@id/jin_photo"
                        android:fontFamily="@font/poppins_regular"
                        android:text="UI/UX Designer, Software Developer"
                        android:textColor="@color/white"
                        android:textSize="15dp" />

                </RelativeLayout>

            </LinearLayout>

        </ScrollView>

    </RelativeLayout>

</RelativeLayout>