<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/waiataFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:orientation="vertical"
    android:scrollbars="vertical"
    tools:context=".WaiataFragment">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="275dp"
        android:id="@+id/relativeMarae1">

        <ImageView
            android:id="@+id/IM_marae"
            android:layout_width="match_parent"
            android:layout_height="275dp"
            android:src="@drawable/wintec_marae" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="-15dp"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:id="@+id/RelativeTitle1"
        android:layout_below="@id/relativeMarae1">

        <TextView
            android:id="@+id/TV_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_bold"
            android:gravity="center"
            android:text="@string/text_carving_01"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="25sp"
            android:textStyle="bold"
            android:background="@drawable/rounded_back_black"/>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:id="@+id/relativeLyric1"
        android:layout_below="@id/RelativeTitle1"
        android:padding="10dp">

        <TextView
            android:id="@+id/lyric1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:fontFamily="@font/poppins_medium"
            android:gravity="center"
            android:text="@string/text_info_carving_01"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="20sp" />

    </RelativeLayout>




</LinearLayout>